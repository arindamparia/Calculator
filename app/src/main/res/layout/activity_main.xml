<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#159F91"
    >
    <TextView
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calculator"
        android:textColor="#504206"
        android:textStyle="bold"
        android:textSize="40sp"></TextView>
    <EditText
        android:id="@+id/typing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/calculator"
        android:layout_above="@id/result"
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_200"
        android:hint="typing"
        android:textSize="40sp"
        ></EditText>
    <TextView
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_above="@id/seven"
        android:hint="Result"
        android:textSize="30sp"
        android:textColor="@color/teal_700"
        ></TextView>
    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/four"
        android:layout_marginEnd="10dp"
        android:text="7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:backgroundTint="#FDD835"
        android:textColor="#FB8C00"
        ></Button>
    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/five"
        android:layout_toEndOf="@id/seven"
        android:layout_marginEnd="10dp"
        android:text="8"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/six"
        android:layout_toEndOf="@id/eight"
        android:layout_marginEnd="10dp"
        android:text="9"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/plus"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_above="@id/minus"
        android:layout_toEndOf="@id/nine"
        android:text="+"
        android:textSize="45sp"
        android:textColor="#FB8C00"

        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/one"
        android:layout_marginEnd="10dp"
        android:text="4"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/two"
        android:layout_toEndOf="@id/four"
        android:layout_marginEnd="10dp"
        android:text="5"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/three"
        android:layout_toEndOf="@id/five"
        android:layout_marginEnd="10dp"
        android:text="6"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/minus"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_above="@id/multiply"
        android:layout_toEndOf="@id/six"
        android:text="—"
        android:textSize="45sp"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/zero"
        android:layout_marginEnd="10dp"
        android:text="1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/dot"
        android:layout_toEndOf="@id/one"
        android:layout_marginEnd="10dp"
        android:text="2"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/sqroot"
        android:layout_toEndOf="@id/two"
        android:layout_marginEnd="10dp"
        android:text="3"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>
    <Button
        android:id="@+id/multiply"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_above="@id/divide"
        android:layout_toEndOf="@id/three"
        android:text="×"
        android:textSize="45sp"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        android:textStyle="bold"
        ></Button>
    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/ac"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FB8C00"
        android:backgroundTint="#FDD835"
        ></Button>

    <Button
        android:id="@+id/divide"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_above="@id/ac"
        android:layout_toEndOf="@id/sqroot"
        android:backgroundTint="#FDD835"
        android:text="/"
        android:textColor="#FB8C00"
        android:textSize="40sp"
        android:textStyle="bold"></Button>
    <Button
        android:id="@+id/dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/ac"
        android:layout_toEndOf="@id/zero"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FDD835"
        android:text="."
        android:textColor="#FB8C00"
        android:textSize="40sp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/sqroot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/ac"
        android:layout_toEndOf="@+id/dot"
        android:backgroundTint="#FDD835"
        android:text="√"
        android:textColor="#FB8C00"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"></Button>
    <Button
        android:id="@+id/delete"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/ac"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FDD835"
        android:text="DEL"
        android:textColor="#FB8C00"
        android:textSize="40sp"
        android:textStyle="bold"></Button>
    <Button
        android:id="@+id/ac"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:text="AC"
        android:backgroundTint="#EF1F1F"
        android:textSize="40sp"
        android:textStyle="bold"></Button>
    <Button
        android:id="@+id/equal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/delete"
        android:backgroundTint="#FDD835"
        android:layout_alignParentEnd="true"
        android:text="="
        android:textColor="#FB8C00"
        android:textSize="40sp"
        android:textStyle="bold">
    </Button>
    <Button
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="true"
        android:text="©"
        android:textSize="20sp"
        android:backgroundTint="#159F91"
        ></Button>

</RelativeLayout>